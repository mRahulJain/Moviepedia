<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_third"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        tools:context=".ThirdAct">
    <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/white"
                    tools:text = "Biography"
                    android:scrollbars="vertical"
                    android:textSize="15sp"
                    android:maxLines="4"
                    android:id="@+id/tVbio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/white"
                    tools:text = "Biography"
                    android:scrollbars="vertical"
                    android:textSize="15sp"
                    android:id="@+id/tVbioF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </FrameLayout>
        <ImageButton
                android:id="@+id/expand_button_2"
                android:background="@android:color/black"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/just1"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:textColor="@android:color/white"
                tools:text = "Also known as"
                android:textSize="15sp"
                android:id="@+id/tVaka"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_marginTop="30dp"
                android:textColor="@android:color/white"
                android:gravity="right"
                tools:text="Popularity"
                android:textSize="20sp"
                android:id="@+id/tVpopularity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:textStyle="bold"/>
        <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/tVmp"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rViewPhotos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>
        <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                ads:adSize="BANNER"
                ads:adUnitId="ca-app-pub-6222464247565126/8412262744">
        </com.google.android.gms.ads.AdView>
        <TextView
                android:id="@+id/just2"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tVkfd"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                tools:text="Known for department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/just3"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rViewWork"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>