<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/okay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginAct" xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
            android:layout_marginTop="50dp"
            android:textSize="50sp"
            android:gravity="center"
            android:text="Welcome to MOVIEPEDIA"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:textSize="25sp"
            android:gravity="center"
            android:text="Join the Moviedb community here"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:textColor="@android:color/white"
            android:layout_marginTop="30dp"
            android:id="@+id/nameUserA"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"
            android:id="@+id/usernameA"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"
            android:id="@+id/passwordA"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:textStyle="bold"
            android:layout_marginTop="220dp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/white"
            android:text="P.S. It's a one time login only! \n You can clear the  storage and add a new account though"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</LinearLayout>