<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main"
        tools:context=".MainActivity">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:id="@+id/lLayout1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/view1"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:text="  Trending"
                        android:textSize="30dp"
                        android:drawableLeft="@drawable/ic_trending_up"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                <ImageButton
                        android:background="@android:color/white"
                        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rViewT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>
            <LinearLayout
                    android:id="@+id/lLayout2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/view2"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:text="  Now Playing"
                        android:textSize="30dp"
                        android:drawableLeft="@drawable/ic_play_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                <ImageButton
                        android:background="@android:color/white"
                        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rViewNP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>
            <LinearLayout
                    android:id="@+id/lLayout3"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/view3"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:text="  Upcoming"
                        android:textSize="30dp"
                        android:drawableLeft="@drawable/ic_event_available"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                <ImageButton
                        android:background="@android:color/white"
                        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rViewU"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>
            <LinearLayout
                    android:id="@+id/lLayout4"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/view4"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:text="  Popular"
                        android:textSize="30dp"
                        android:drawableLeft="@drawable/ic_favorite_border"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                <ImageButton
                        android:background="@android:color/white"
                        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rViewP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>
            <LinearLayout
                    android:id="@+id/lLayout5"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/view5"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:text="  Top Rated"
                        android:textSize="30dp"
                        android:drawableLeft="@drawable/ic_vertical_align"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                <ImageButton
                        android:background="@android:color/white"
                        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rViewTR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>


</LinearLayout>