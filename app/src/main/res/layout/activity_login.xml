<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/okay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginAct" xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
            android:layout_marginTop="80dp"
            android:textSize="50sp"
            android:gravity="center"
            android:text="Welcome to MOVIEPEDIA"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:textSize="25sp"
            android:gravity="center"
            android:text="Join the Moviedb community here"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_margin="10dp"
            android:id="@+id/nameUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
                android:textSize="20sp"
                android:inputType="text"
                android:maxLength="20"
                android:hint="Enter you name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_margin="10dp"
            android:id="@+id/username"
            app:counterEnabled="true"
            app:counterMaxLength="20"
            app:errorEnabled="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
                android:textSize="20sp"
                android:inputType="text"
                android:maxLength="20"
                android:hint="Username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password"
            android:layout_margin="10dp"
            app:passwordToggleEnabled="true"
            app:errorEnabled="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
                android:textSize="20sp"
                android:inputType="textPassword"
                android:maxLength="20"
                android:hint="Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:layout_marginLeft="80dp"
                android:id="@+id/btnAllow"
                android:layout_gravity="left"
                android:background="@android:color/holo_blue_light"
                android:text="ALLOW"
                android:textSize="15sp"
                android:layout_width="100dp"
                android:layout_height="50dp"/>
        <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Button
                android:layout_marginRight="80dp"
                android:id="@+id/btnLogin"
                android:layout_gravity="right"
                android:background="@android:color/holo_blue_light"
                android:text="LOGIN"
                android:textSize="15sp"
                android:layout_width="100dp"
                android:layout_height="50dp"/>
    </LinearLayout>

    <LinearLayout
            android:layout_marginTop="60dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:layout_marginLeft="80dp"
                android:id="@+id/btnBack"
                android:layout_gravity="left"
                android:background="@android:color/holo_blue_light"
                android:text="BACK"
                android:textSize="15sp"
                android:layout_width="100dp"
                android:layout_height="50dp"/>
        <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Button
                android:layout_marginRight="80dp"
                android:id="@+id/btnLogout"
                android:layout_gravity="center"
                android:background="@android:color/holo_blue_light"
                android:text="Logout"
                android:textSize="15sp"
                android:layout_width="100dp"
                android:layout_height="50dp"/>
    </LinearLayout>





</LinearLayout>