<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/okay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginAct" xmlns:app="http://schemas.android.com/apk/res-auto">
    <Button
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/btnBack"
            android:layout_gravity="left"
            android:background="@android:color/holo_blue_light"
            android:text="HOMEPAGE"
            android:textSize="15sp"
            android:layout_width="120dp"
            android:layout_height="50dp"/>
    <TextView
            android:layout_marginTop="50dp"
            android:textSize="50sp"
            android:gravity="center"
            android:text="Welcome to MOVIEPEDIA"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:textSize="25sp"
            android:gravity="center"
            android:text="Join the Moviedb community here"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_margin="10dp"
            android:id="@+id/nameUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
                android:textSize="20sp"
                android:inputType="text"
                android:maxLength="20"
                android:hint="Enter you name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_margin="10dp"
            android:id="@+id/username"
            app:counterEnabled="true"
            app:counterMaxLength="20"
            app:errorEnabled="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
                android:textSize="20sp"
                android:inputType="text"
                android:maxLength="20"
                android:hint="Username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password"
            android:layout_margin="10dp"
            app:passwordToggleEnabled="true"
            app:errorEnabled="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
                android:textSize="20sp"
                android:inputType="textPassword"
                android:maxLength="20"
                android:hint="Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
            android:layout_margin="20dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <Button
                android:layout_marginLeft="60dp"
                android:id="@+id/btnAllow"
                android:background="@android:color/holo_blue_light"
                android:text="ALLOW"
                android:textSize="15sp"
                android:layout_width="120dp"
                android:layout_height="50dp"/>
        <Button
                android:layout_marginLeft="50dp"
                android:id="@+id/btnLogin"
                android:background="@android:color/holo_blue_light"
                android:text="SIGNUP"
                android:textSize="15sp"
                android:layout_width="120dp"
                android:layout_height="50dp"/>
    </LinearLayout>

    <TextView
            android:textStyle="bold"
            android:layout_marginTop="220dp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/white"
            android:text="P.S. It's a one time login only!"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</LinearLayout>