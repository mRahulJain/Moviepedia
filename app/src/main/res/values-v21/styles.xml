<resources>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#ececec</item>
        <item name="colorControlActivated">@android:color/holo_red_light</item>
    </style>
    <style name="progressBarOtp" parent="@style/Theme.AppCompat.Light">
        <item name="colorAccent">#000000</item>
    </style>
    <style name="progressBarOtp1" parent="@style/Theme.AppCompat.Light">
        <item name="colorAccent">@android:color/darker_gray</item>
    </style>
</resources>
